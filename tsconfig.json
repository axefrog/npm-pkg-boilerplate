{
  "compilerOptions": {
    "moduleResolution": "node",
    "strictNullChecks": true,
    "target": "es5",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "pretty": true,
    "module": "commonjs",
    "removeComments": false,
    "noUnusedLocals": true,
    "outDir": "./.build"
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ]
}