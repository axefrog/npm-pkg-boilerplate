{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Mocha",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "outFiles": ["${workspaceRoot}/.build/**/*.js"],
      "runtimeExecutable": "mocha",
      "windows": {
        "runtimeExecutable": "mocha.cmd"
      },
      "runtimeArgs": [
        "--opts", "./mocha.opts"
      ],
      "sourceMaps": true
    },
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "port": 5858,
      "address": "localhost",
      "restart": false,
      "sourceMaps": false,
      "outFiles": [],
      "localRoot": "${workspaceRoot}",
      "remoteRoot": null
    },
    {
      "name": "Attach to Process",
      "type": "node",
      "request": "attach",
      "processId": "${command.PickProcess}",
      "port": 5858,
      "sourceMaps": false,
      "outFiles": []
    }
  ]
}